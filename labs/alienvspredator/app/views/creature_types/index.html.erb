<input type="button" id="new_creature" value="New Creature" class="btn btn-danger"/>

<%= form_tag '/creaturetypes', :id => 'creature_form', :remote => true do %>
  <%= text_field_tag 'name' %>
  <%= submit_tag 'Create Creature', :class => 'btn btn-primary' %>
<% end %>

<ul id="creaturetypes">
<% @creature_types.each do |ct| %>
  <li><%= link_to ct.name, creaturetype_path(ct) %></li>
<% end %>
</ul>